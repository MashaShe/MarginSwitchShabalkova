<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BlackTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkBlack</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
        <item name="android:colorBackground">@color/colorAccentBlack</item>

    </style>

    <style name = "GreenTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkGreen</item>
        <item name="android:textColor">@color/colorTextGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="android:colorBackground">@color/colorBackGreen</item>
    </style>

    <style name = "BlueTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkBlue</item>
        <item name="android:textColor">@color/colorTextBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="android:colorBackground">@color/colorBackBlue</item>
    </style>

    <style name="MarginBig" parent="AppTheme">
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="MarginMedium" parent="AppTheme">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="MarginSmall" parent="AppTheme">
        <item name="android:layout_margin">5dp</item>
    </style>


</resources>